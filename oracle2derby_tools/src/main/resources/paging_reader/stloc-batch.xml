<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd 
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd ">
    
    <context:annotation-config/>
    
    <bean id="jdbcPagingItemReader4STLOC" class="org.springframework.batch.item.database.JdbcPagingItemReader" scope="step">
    	<property name="dataSource" ref="oracleDS" />
    	<property name="rowMapper">
			<bean class="com.avn.dataload.model.rowmapper.STLOCRowMapper" />
		</property>
		<property name="queryProvider">
			<bean class="org.springframework.batch.item.database.support.SqlPagingQueryProviderFactoryBean">
				<property name="dataSource" ref="oracleDS" />
				<property name="selectClause" value="SELECT STLOC_ID,IDENTIFIER,PHONE,FAX,ADDRESS1,ADDRESS2,ADDRESS3,CITY,STATE,COUNTRY,ZIPCODE,ACTIVE,LATITUDE,LONGITUDE,GEONODE_ID,OPTCOUNTER,STOREENT_ID" />
		    	<property name="fromClause" value="FROM EMDI.STLOC" />
		    	<property name="sortKeys">
		    		<map>
		    			<entry key="STLOC_ID" value="DESCENDING" />
		    		</map>
		    	</property>
			</bean>
		</property>
    	<property name="pageSize" value="1000"/>
    </bean>
    
    <bean id="jdbcBatchItemWriter4STLOC" class="org.springframework.batch.item.database.JdbcBatchItemWriter">
    	<property name="dataSource" ref="derbyDS" />
    	<property name="itemSqlParameterSourceProvider">
    		<bean class="org.springframework.batch.item.database.BeanPropertyItemSqlParameterSourceProvider" />
    	</property>
    	<property name="sql">
    		<value>
    			<![CDATA[
    				INSERT INTO STLOC(STLOC_ID,IDENTIFIER,PHONE,FAX,ADDRESS1,ADDRESS2,ADDRESS3,CITY,STATE,COUNTRY,ZIPCODE,ACTIVE,LATITUDE,LONGITUDE,GEONODE_ID,OPTCOUNTER,STOREENT_ID)
    				values (:STLOC_ID,:IDENTIFIER,:PHONE,:FAX,:ADDRESS1,:ADDRESS2,:ADDRESS3,:CITY,:STATE,:COUNTRY,:ZIPCODE,:ACTIVE,:LATITUDE,:LONGITUDE,:GEONODE_ID,:OPTCOUNTER,:STOREENT_ID) 
    			]]>
    		</value>
    	</property>
    </bean>    
    
</beans>