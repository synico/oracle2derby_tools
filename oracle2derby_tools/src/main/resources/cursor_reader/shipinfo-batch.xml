<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd 
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd ">
    
    <context:annotation-config/>
    
    <bean id="jdbcCursorItemReader4SHIPINFO" class="org.springframework.batch.item.database.JdbcCursorItemReader" scope="step">
    	<property name="dataSource" ref="oracleDS" />
    	<property name="sql" value="SELECT SHIPINFO_ID,ORDERS_ID,ADDRESS_ID,POLICY_ID,SHIPMODE_ID,OPTCOUNTER,CARRIERACCNTNUM,INSTRUCTIONS FROM EMDI.SHIPINFO" />
    	<property name="rowMapper">
			<bean class="com.avn.dataload.model.rowmapper.SHIPINFORowMapper" />
		</property>
		<property name="fetchSize" value="1000"/>
    </bean>
    
    <bean id="jdbcBatchItemWriter4SHIPINFO" class="org.springframework.batch.item.database.JdbcBatchItemWriter">
    	<property name="dataSource" ref="derbyDS" />
    	<property name="itemSqlParameterSourceProvider">
    		<bean class="org.springframework.batch.item.database.BeanPropertyItemSqlParameterSourceProvider" />
    	</property>
    	<property name="sql">
    		<value>
    			<![CDATA[
    				INSERT INTO SHIPINFO(SHIPINFO_ID,ORDERS_ID,ADDRESS_ID,POLICY_ID,SHIPMODE_ID,OPTCOUNTER,CARRIERACCNTNUM,INSTRUCTIONS)
    				values (:SHIPINFO_ID,:ORDERS_ID,:ADDRESS_ID,:POLICY_ID,:SHIPMODE_ID,:OPTCOUNTER,:CARRIERACCNTNUM,:INSTRUCTIONS) 
    			]]>
    		</value>
    	</property>
    </bean>    
    
</beans>