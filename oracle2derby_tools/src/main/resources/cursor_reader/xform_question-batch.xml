<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd 
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd ">
    
    <context:annotation-config/>
    
    <bean id="jdbcCursorItemReader4XFORM_QUESTION" class="org.springframework.batch.item.database.JdbcCursorItemReader" scope="step">
    	<property name="dataSource" ref="oracleDS" />
    	<property name="sql" value="SELECT FORM_ID,FORM_VERSION_ID,FORM_QUESTION_ID,FORM_QUESTION_TYPE_CD,SORT_ORDER_NO,FORM_QUESTION_SET_ID FROM EMDI.XFORM_QUESTION" />
    	<property name="rowMapper">
			<bean class="com.avn.dataload.model.rowmapper.XFORM_QUESTIONRowMapper" />
		</property>
		<property name="fetchSize" value="1000"/>
    </bean>
    
    <bean id="jdbcBatchItemWriter4XFORM_QUESTION" class="org.springframework.batch.item.database.JdbcBatchItemWriter">
    	<property name="dataSource" ref="derbyDS" />
    	<property name="itemSqlParameterSourceProvider">
    		<bean class="org.springframework.batch.item.database.BeanPropertyItemSqlParameterSourceProvider" />
    	</property>
    	<property name="sql">
    		<value>
    			<![CDATA[
    				INSERT INTO XFORM_QUESTION(FORM_ID,FORM_VERSION_ID,FORM_QUESTION_ID,FORM_QUESTION_TYPE_CD,SORT_ORDER_NO,FORM_QUESTION_SET_ID)
    				values (:FORM_ID,:FORM_VERSION_ID,:FORM_QUESTION_ID,:FORM_QUESTION_TYPE_CD,:SORT_ORDER_NO,:FORM_QUESTION_SET_ID) 
    			]]>
    		</value>
    	</property>
    </bean>    
    
</beans>