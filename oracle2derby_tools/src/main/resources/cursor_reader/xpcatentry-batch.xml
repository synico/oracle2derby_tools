<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd 
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd ">
    
    <context:annotation-config/>
    
    <bean id="jdbcCursorItemReader4XPCATENTRY" class="org.springframework.batch.item.database.JdbcCursorItemReader" scope="step">
    	<property name="dataSource" ref="oracleDS" />
    	<property name="sql" value="SELECT CATENTRY_ID,FAMILYNAME,NEWPRODUCTFLAG,PRODUCTAPPLICATIONS,UNSPSCCODE,UNSPSCVERSIONCODE,GREENCOMPLIANTFLAG,KITINCLUDE,LEADFREE,MILITARYPRODUCTFL,PRODUCTNUMBER,TOPSELLERFLAG,FIELD1,FIELD2,FIELD3,FIELD4,FIELD5,FIELD6,OPTCOUNTER FROM EMDI.XPCATENTRY 
    	WHERE CATENTRY_ID IN (SELECT SELECTED_ID FROM TMP_CATENTRYIDS)" />
    	<property name="rowMapper">
			<bean class="com.avn.dataload.model.rowmapper.XPCATENTRYRowMapper" />
		</property>
		<property name="fetchSize" value="1000"/>
    </bean>
    
    <bean id="jdbcBatchItemWriter4XPCATENTRY" class="org.springframework.batch.item.database.JdbcBatchItemWriter">
    	<property name="dataSource" ref="derbyDS" />
    	<property name="itemSqlParameterSourceProvider">
    		<bean class="org.springframework.batch.item.database.BeanPropertyItemSqlParameterSourceProvider" />
    	</property>
    	<property name="sql">
    		<value>
    			<![CDATA[
    				INSERT INTO XPCATENTRY(CATENTRY_ID,FAMILYNAME,NEWPRODUCTFLAG,PRODUCTAPPLICATIONS,UNSPSCCODE,UNSPSCVERSIONCODE,GREENCOMPLIANTFLAG,KITINCLUDE,LEADFREE,MILITARYPRODUCTFL,PRODUCTNUMBER,TOPSELLERFLAG,FIELD1,FIELD2,FIELD3,FIELD4,FIELD5,FIELD6,OPTCOUNTER)
    				values (:CATENTRY_ID,:FAMILYNAME,:NEWPRODUCTFLAG,:PRODUCTAPPLICATIONS,:UNSPSCCODE,:UNSPSCVERSIONCODE,:GREENCOMPLIANTFLAG,:KITINCLUDE,:LEADFREE,:MILITARYPRODUCTFL,:PRODUCTNUMBER,:TOPSELLERFLAG,:FIELD1,:FIELD2,:FIELD3,:FIELD4,:FIELD5,:FIELD6,:OPTCOUNTER) 
    			]]>
    		</value>
    	</property>
    </bean>    
    
</beans>